div.row.proximos-viajes
            each viaje in viajes
                div.col-md-6.col-lg-4.mb-4
                    div.card 
                        img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
                        div.card-body
                            h2= viaje.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar-pin(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M12.5 21h-6.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v4')
                                    path(d='M16 3v4')
                                    path(d='M21.121 20.121a3 3 0 1 0 -4.242 0c.418 .419 1.125 1.045 2.121 1.879c1.051 -.89 1.759 -1.516 2.121 -1.879z')
                                    path(d='M19 18v.01')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                span #{viaje.fecha_ida} - #{viaje.fecha_ida}

                            p   
                                svg.icon.icon-tabler.icon-tabler-user-check(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                                    path(d='M6 21v-2a4 4 0 0 1 4 -4h4')
                                    path(d='M15 19l2 2l4 -4')
                                span #{viaje.disponibles} Disponibles 

                            p= viaje.descripcion.substr(0,100) + '...'

                            a(href=`viajes/${viaje.slug}`,class="btn btn-success btn-block") Más Información 